<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:padding="14dp"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:context=".MainActivity">



    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Hello Aman  your ongoing project for xml and android"
              android:tooltipText="Here the Quote  will be displayed"
              android:textColor="@color/black"
              android:textSize="18sp"
              android:textStyle="bold"
              android:id="@+id/quote_textview"/>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/quote_textview"
              android:id="@+id/author_textview_id"
              android:tooltipText="dh"
              tools:text="Aman Singh Maharaj"
              android:textSize="24sp"
              android:fontFamily="serif-monospace"
              android:layout_marginTop="32dp"
    />
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/next_btn"/>

    <ProgressBar android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentBottom="true"
                 android:layout_centerHorizontal="true"
                 android:id="@+id/progress_bar"
                 android:visibility="gone"/>



</RelativeLayout>